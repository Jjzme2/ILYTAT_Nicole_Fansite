rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Auth check
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Role Checks
    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Management Access (Admin OR Creator)
    function canManage() {
      return isAuthenticated() && (getUserData().role == 'admin' || getUserData().role == 'creator');
    }
    
    // Content Access (Creator ONLY)
    function canUpload() {
      return isAuthenticated() && getUserData().role == 'creator';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isOwner(userId) || canManage();
      allow write: if isOwner(userId) || canManage();
    }

    // Posts Collection
    match /posts/{postId} {
      allow read: if true;
      allow create, update: if canUpload();
      allow delete: if canManage();
    }
    
    // Media Kits
    match /media_kits/{docId} {
      allow read: if true;
      allow write: if canUpload();
    }
    
    // Brand Deals
    match /brand_deals/{dealId} {
        allow read: if canManage();
        allow write: if canManage();
    }

    // Suggestions
    match /suggestions/{suggestionId} {
        allow create: if isAuthenticated() && getUserData().isSubscriber == true;
        allow read: if canManage() || isOwner(resource.data.userId);
        allow delete: if canManage();
    }

    // Developer Tasks
    match /developer_tasks/{taskId} {
        allow read, write: if canManage();
    }

    // Comments (Subcollection of Posts)
    // Nested path match
    match /posts/{postId}/comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
        // allow update: if canManage() || isOwner(resource.data.userId); // Optional
        allow delete: if canManage() || isOwner(resource.data.userId);
    }
  }
}
